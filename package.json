{
  "name": "network-monitor-js",
  "version": "1.1.5", 
  "description": "A lightweight JS utility to monitor internet connectivity, online/offline, connection quality (2G/3G/4G/5G), ping latency and detect poor network conditions.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.global.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.global.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepare": "npm run build",
    "test": "vitest run"
  },
  "keywords": [
    "network",
    "connectivity",
    "monitor",
    "online",
    "offline",
    "latency",
    "ping",
    "javascript",
    "internet",
    "connection",
    "speed"
  ],
  "author": "MadeByRaymond (Daniel Obiekwe)",
  "license": "Apache-2.0 license",
  "repository": {
    "type": "git",
    "url": "https://github.com/MadeByRaymond/network-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/MadeByRaymond/network-monitor/issues"
  },
  "homepage": "https://github.com/MadeByRaymond/network-monitor#readme",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  }
}
